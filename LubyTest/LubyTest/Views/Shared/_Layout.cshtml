<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Banco de Horas | @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/admin-lte/css/adminlte.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("styles", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-primary navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="https://www.linkedin.com/in/matheus-souza-4a4b19189/" target="_blank" class="nav-link text-white-50">Desenvolvido por Matheus Souza</a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-controller="Home" asp-action="Index" class="brand-link navbar-primary">
                <i class="fa fa-clock ml-4"></i>
                <span style="color:white" class="brand-text font-weight-bold">Banco de Horas</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" id="pagina-ativa" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview active">
                            <a asp-controller="Developers" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>
                                    Desenvolvedores
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview ">
                            <a asp-controller="Projects" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Projetos
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview ">
                            <a asp-controller="Lauches" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-university"></i>
                                <p>
                                    Lançamentos
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview ">
                            <a asp-controller="Lauches" asp-action="Ranking" class="nav-link">
                                <i class="nav-icon fas fa-star"></i>
                                <p>
                                    Ranking
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewBag.Menu</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-controller="@ViewBag.Home" asp-action="Index">@ViewBag.Index</a></li>
                                <li class="breadcrumb-item active">@ViewBag.Title</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div id="conteudo">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer text-center no-print">
            <strong>Copyright &copy; @DateTime.Now.Year .</strong> All rights reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/admin-lte/js/adminlte.min.js"></script>
    <script src="~/lib/jquery.inputmask/jquery.inputmask.min.js"></script>
    <script src="~/lib/jquery.inputmask/bindings/inputmask.binding.js"></script>
    <script src="~/lib/jquery.inputmask/inputmask.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
